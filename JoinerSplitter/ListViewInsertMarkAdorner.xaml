             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:JoinerSplitter"
             mc:Ignorable="d" 
             d:DesignHeight="5" d:DesignWidth="105">
    <Grid Height="4">
        <Polygon Points="1,1.25 2.5,2.25 1,3.25" Stroke="Black" Fill="Black" />
        <Line X2="1" Stretch="Fill" Stroke="Black" StrokeThickness="0.5"/>
